<idea-plugin>
  <!-- Plugin metadata -->
  <id>com.unity.dependency.injection</id>
  <n>Unity Dependency Injection Helper</n>
  <version>1.0.0</version>
  <vendor email="your.email@example.com">Your Company</vendor>

  <description><![CDATA[
    Unity Dependency Injection Helper plugin for Rider.
    Provides simple actions to generate dependency injection code for MonoBehaviour classes.
  ]]></description>

  <change-notes><![CDATA[
    <h3>Version 1.0.0</h3>
    <ul>
      <li>Initial release</li>
      <li>Editor actions for dependency injection</li>
      <li>Context menu integration</li>
    </ul>
  ]]></change-notes>

  <idea-version since-build="251.0" until-build="251.*"/>
  <depends>com.intellij.modules.rider</depends>

  <extensions defaultExtensionFor="com.intellij">
    <toolWindow id="MyPluginTest"
                displayName="Plugin Test"
                factoryClass="TestToolWindowFactory"
                anchor="bottom"/>

    <postStartupActivity implementation="PluginStartupActivity"/>

    <notificationGroup id="MyPlugin.NotificationGroup"
                       displayType="BALLOON"/>
  </extensions>

  <actions>
    <action id="ContextMenuInjectAction"
            class="ContextMenuInjectAction"
            text="ðŸ”§ Inject This Field"
            description="Inject this field as dependency">
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt I"/>
    </action>

    <action id="DebugTestAction"
            class="DebugTestAction"
            text="ðŸ› Debug Plugin Status"
            description="Show detailed plugin debug information">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt D"/>
    </action>

  </actions>
</idea-plugin>